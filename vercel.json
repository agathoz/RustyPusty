@"
FROM rust:1.78 AS builder
RUN cargo install zola --version 0.19.2

FROM builder AS zola-builder
WORKDIR /app
COPY . .
RUN zola build

FROM nginx:alpine
COPY --from=zola-builder /app/public /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
"@ | Out-File -FilePath Dockerfile -Encoding ASCII
